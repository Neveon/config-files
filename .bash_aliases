# Always copy recursively
alias cp="cp -r"

# python is python3
alias python="python3"

# neovim
alias edvim="nvim ~/.config/nvim/init.vim"
alias vim="nvim"

# bash settings
alias edba="nvim ~/.bash_aliases"
alias edbp="nvim ~/.profile"
alias edbrc="nvim ~/.bashrc"

# tmux
alias edtm="nvim ~/.tmux.conf"

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
